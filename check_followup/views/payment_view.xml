<odoo>
    <data>


        <record id="account_payment_inherit_check_followup" model="ir.ui.view">
            <field name="name">account.payment.inherit.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_transaction_id']" position="after">
                    <field name="bank_type" invisible="1"/>
                    <field name="check_followup"/>
                    <field name="check_date"/>
                    <field name="cheque_number"/>
                </xpath>
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="bank_type" invisible="1"/>
                    <field name="check_followup"/>
                    <field name="check_date"/>
                    <field name="cheque_number"/>

                </xpath>
                <xpath expr="//field[@name='payment_type']" position="before">
                    <!--                 <xpath expr="//field[@name='payment_date']" position="before">-->

                    <field name="num2wo" readonly="1"/>
                </xpath>
                <!--                <xpath expr="//button[@name='button_journal_entries']" position="before">-->
                <xpath expr="//button[@name='button_open_journal_entry']" position="before">

                    <button type="object" name="action_check_view" class="oe_stat_button"
                            icon="fa-list-alt"
                            attrs="{'invisible': ['|',('check_followup','!=',True),('state','=','draft')]}">
                        <field name="check_count" widget="statinfo" string="Checks"/>
                    </button>
                </xpath>

            </field>
        </record>

        <record id="account_payment_inherit_wizard" model="ir.ui.view">
            <field name="name">account.payment.inherit.wizard.form</field>
            <field name="model">account.payment</field>
            <!--                    <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>-->
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <!--                <xpath expr="//field[@name='communication']" position="after">-->
                <!--                    <field name="bank_type" invisible="1"/>-->
                <!--                    <field name="check_followup"/>-->
                <!--                    <field name="check_date"/>-->
                <!--                    <field name="cheque_number"/>-->
                <!--                </xpath>-->
                <!--    <xpath expr="//field[@name='journal_id']" position="after">-->


                <!--                 </xpath>-->
                <xpath expr="//field[@name='payment_type']" position="before">

                    <field name="num2wo" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
