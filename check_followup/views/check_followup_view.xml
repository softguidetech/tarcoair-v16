<odoo>
    <data>

        <record id="view_form_check_followup_in" model="ir.ui.view">
            <field name="name">check.followup.form.in</field>
            <field name="model">check.followup</field>
            <field name="arch" type="xml">
                <form delete="0">
                    <header>
                        <button name="change_bank" string="Deposit in Bank" type="object"
                                states="under_collection" class="oe_highlight"/>


                        <button name="check_reject" string="Check Rejected" type="object"
                                states="under_collection" />
<button name="cancel_check" string="Cancel Check" type="object"
                                states="under_collection" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="under_collection,deposit_check,cancel_check,reject"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <div>
                                <h1>
                                    <field name="name_in" string="Sequence"/>
                                </h1>
                            </div>

                        </group>
                        <group col="6" string="Check Details">

                            <field name="check_created" string="تاريخ التحرير" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                            <field name="check_date" string="تاريخ الاستحقاق" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                            <field name="cheque_number" string="رقم الشيك" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                            <field name="bank_id" string="البنك"/>
                            <field name="partner_id" string="العميل"/>
                            <field name="beneficiary"/>
                            <field name="currency_id"/>


                            <field name="source_document"/>
                            <field name="memo"/>
                            <field name="check_type"/>
                            <field name="amount"/>
                        </group>

                        <field name="log_ids" widget="one2many_list" nolabel="1">
                            <tree  string="Check Log" editable="bottom">
                                <field name="move_id"/>
                                <field name="move_description"/>
                                <field name="check_id"/>
                                <field name="move_date"/>
                            </tree>
                        </field>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>

                    </div>
                </form>
            </field>
        </record>



        <record id="view_form_check_followup_out" model="ir.ui.view">
            <field name="name">check.followup.form.out</field>
            <field name="model">check.followup</field>
            <field name="arch" type="xml">
                <form delete="0">
                    <header>

                        <button name="change_date" string="Withdraw Check" type="object"
                                states="out_standing" class="oe_highlight"/>

                        <button name="check_reject" string="Check Rejected" type="object"
                                states="out_standing" />
<button name="cancel_check" string="Cencnel Check" type="object"
                                states="out_standing" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="out_standing,withdraw_check,cancel_check,reject"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <div>
                                <h1>
                                    <field name="name_out" string="Sequence"/>
                                </h1>
                            </div>

                        </group>
                        <group col="4" string="Check Details">
                            <field name="check_created" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                            <field name="check_date" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                            <field name="cheque_number" attrs="{'readonly': [('state','not in',['draft'])]}"/>
                            <field name="beneficiary"/>
                            <field name="currency_id"/>
                            <!--                            <field name="partner_id"/>-->
                            <field name="bank_id" string="Bank"/>
                            <field name="source_document"/>
                            <field name="memo"/>
                            <field name="check_type"/>
                            <field name="amount"/>

                        </group>

                        <field name="log_ids" widget="one2many_list" nolabel="1">
                            <tree  string="Check Log" editable="bottom">
                                <field name="move_id"/>
                                <field name="move_description"/>
                                <field name="check_id"/>
                                <field name="move_date"/>
                            </tree>
                        </field>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="sequence_check_followup_in" model="ir.sequence">
            <field name="name">Check In sequence</field>
            <field name="code">check.followup.in.code</field>
            <field name="prefix">/%(range_year)s/</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field eval="True" name="use_date_range"/>
            <field eval="False" name="company_id"/>
            <field name="padding">4</field>
        </record>

        <record id="sequence_check_followup_out" model="ir.sequence">
            <field name="name">Check out sequence</field>
            <field name="code">check.followup.out.code</field>
            <field name="prefix">/%(range_year)s/</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field eval="True" name="use_date_range"/>
            <field eval="False" name="company_id"/>
            <field name="padding">4</field>
        </record>

        <record id="view_tree_check_followup_in" model="ir.ui.view">
            <field name="name">check.in.tree</field>
            <field name="model">check.followup</field>
            <field name="arch" type="xml">
                <tree string="Check In" delete="0">
                    <field name="name_in"/>
                    <field name="partner_id"/>
                   <field name="check_created"/>

                    <field name="check_date"/>
                    <field name="cheque_number"/>
                    <field name="beneficiary"/>
                    <field name="currency_id"/>
                    <field name="state"/>
                    <field name="amount"/>

                </tree>
            </field>
        </record>

        <record id="view_tree_check_followup_out" model="ir.ui.view">
            <field name="name">check.out.tree</field>
            <field name="model">check.followup</field>
            <field name="arch" type="xml">
                <tree string="Check Out" delete="0">
                    <field name="name_out"/>
                    <field name="partner_id"/>
                    <field name="check_created"/>
                    <field name="check_date"/>
                    <field name="cheque_number"/>
                    <field name="beneficiary"/>
                    <field name="currency_id"/>
                    <field name="state"/>
                    <field name="amount"/>

                </tree>
            </field>
        </record>


        <record id="check_in_ac" model="ir.actions.act_window">
            <field name="name">Check Followup</field>
            <field name="res_model">check.followup</field>
<!--            <field name="view_type">form</field>-->
            <!--<field name="view_id" ref="view_form_check_followup_in"/>-->
            <!--<field name="view_id" ref="view_tree_check_followup_in"/>-->
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_tree_check_followup_in')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_form_check_followup_in')})]"/>
            <field name="view_mode">form</field>
            <field name="domain">[('check_type','=','in')]</field>
        </record>

        <record id="check_out_ac" model="ir.actions.act_window">
            <field name="name">Check Followup</field>
            <field name="res_model">check.followup</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_tree_check_followup_out')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_form_check_followup_out')})]"/>
            <!--<field name="view_id" ref="view_tree_check_followup_out"/>-->
            <field name="view_mode">form</field>
            <field name="domain">[('check_type','=','out')]</field>
        </record>

        <menuitem id="check_followup_root" name="PDC" />
        <menuitem id="check_followup_ch1" name="PDC" parent="account.menu_finance"
                  sequence="1"/>
        <menuitem id="check_followup_root_ch1_ch1" name="Customer Check" parent="check_followup_ch1"
                  sequence="1" action="check_in_ac"/>

        <menuitem id="check_followup_root_ch2_ch2" name="Vendor Check" parent="check_followup_ch1"
                  sequence="2" action="check_out_ac"/>
    </data>
</odoo>
