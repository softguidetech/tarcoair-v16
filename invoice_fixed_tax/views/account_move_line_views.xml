<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Invoice Line List View Extension (embedded in invoice form) -->
    <record id="view_account_move_form_invoice_lines_fixed_tax" model="ir.ui.view">
        <field name="name">account.move.form.invoice.lines.fixed.tax</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add fixed tax amount field after account_id in invoice lines list -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="before">
                <field name="company_enable_fixed_tax" column_invisible="1"/>
                <field name="fixed_tax_amount" 
                       column_invisible="not company_enable_fixed_tax or display_type"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       optional="hide"/>
            </xpath>
            <!-- Add fixed tax amount field in invoice line form view (mobile) after account_id -->
            <!-- <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="before">
                <field name="company_enable_fixed_tax" invisible="1"/>
                <field name="fixed_tax_amount" 
                       invisible="not company_enable_fixed_tax or display_type"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
            </xpath> -->
        </field>
    </record>

</odoo>

