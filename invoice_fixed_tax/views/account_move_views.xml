<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Invoice Form View to Show Fixed Tax in Totals -->
    <record id="view_account_move_form_fixed_tax_total" model="ir.ui.view">
        <field name="name">account.move.form.fixed.tax.total</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add total_fixed_tax field early in the form -->
            <xpath expr="//sheet" position="inside">
                <field name="total_fixed_tax" invisible="1"/>
            </xpath>
            <!-- Add fixed tax amount before tax_totals in invoice totals section -->
            <xpath expr="//field[@name='tax_totals']" position="before">
                <div class="row" invisible="not total_fixed_tax or move_type == 'entry'">
                    <div class="col-6 text-end">
                        <label for="total_fixed_tax" string="Fixed Tax Amount:" class="o_form_label"/>
                    </div>
                    <div class="col-6 text-end">
                        <field name="total_fixed_tax" 
                               widget="monetary" 
                               options="{'currency_field': 'currency_id'}"
                               readonly="1"
                               nolabel="1"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

